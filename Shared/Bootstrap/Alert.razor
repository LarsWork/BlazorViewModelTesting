<div class="@(String.Concat("alert", Class, Dismissable ? "alert-dismissible fade show" : ""))" role="alert">
    @ChildContent
    @if (Dismissable)
    {
    <CommandButton class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </CommandButton>
    }
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Dismissable { get; set; }

    [Parameter]
    public string Class { get; set; } = "alert-primary";
}